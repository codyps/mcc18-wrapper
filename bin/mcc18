#!/bin/bash
#local EXENAME BASEDIR WINE output
EXENAME="mcc18.exe"
if [ -x `dirname $0`/${EXENAME} ]; then
	BASEDIR=`dirname $0`
else
	BASEDIR="/opt/mcc18/bin"
fi

if [ $(uname) = "CYGWIN_NT-6.0" ]; then
  WINE=""
else
  WINE=wine
fi

#exec ${WINE} ${BASEDIR}/${EXENAME} $*
output=$( ${WINE} ${BASEDIR}/${EXENAME} $* | tr -d '\r' |\
  egrep -v "MPLAB|Days|abstraction" | egrep -v '^$'  )
  
if [ -n "$output" ]; then
  echo -E "${output}"
  exit 1
else
  exit 0
fi
